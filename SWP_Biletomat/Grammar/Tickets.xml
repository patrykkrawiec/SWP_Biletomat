<grammar version="1.0" xml:lang="pl-PL" root="rootRule" xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">

  <rule id="rootRule">
    <ruleref uri="#number"/>
    <tag> out.number = rules.latest();</tag>
    <ruleref uri="#ticket_type" />
    <tag> out.ticket_type = rules.latest();</tag>
  </rule>


  <rule id="ticket_type">
    <one-of>
      <item>
        ulgowy
        <tag>out="ulgowy"</tag>
      </item>
      <item>
        normalny
        <tag>out="normalny"</tag>
      </item>


      <item>
        miesięczny
        <tag>out="miesięczny"</tag>
      </item>
    </one-of>
  </rule>



  <rule id="number">
    <one-of>
      <item>
        zero <tag> out="0"</tag>
      </item>
      <item>
        jeden <tag> out="1"; </tag>
      </item>
      <item>
        dwa <tag> out="2"; </tag>
      </item>
      <item>
        trzy <tag> out="3"; </tag>
      </item>
      <item>
        cztery <tag> out="4"; </tag>
      </item>
      <item>
        pięć <tag> out="5"; </tag>
      </item>
      <item>
        sześć <tag> out="6"; </tag>
      </item>
      <item>
        siedem <tag> out="7"; </tag>
      </item>
      <item>
        osiem <tag> out="8"; </tag>
      </item>
      <item>
        dziewięć <tag> out="9"; </tag>
      </item>
    </one-of>
  </rule>
</grammar>
